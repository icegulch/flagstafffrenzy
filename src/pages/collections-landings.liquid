---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: "/{{ tag | slugify }}/index.html"
eleventyComputed:
  title: "{{ tag }}"
---

<header>
  <h1>
    {{ tag }}
  </h1>
</header>

<main>
  <ol>
    {% assign sortedCollection = collections[ tag ] | sort: "publish_date" | reverse %}
    {% for post in sortedCollection %}
    <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
    {% endfor %}
  </ol>
</main>