---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - Classifieds
permalink: /{{ tag | slugify }}/
eleventyComputed:
  title: "From the {{ tag }} Collection"
---
<h1>Tagged “{{ tag }}”</h1>

<ol>
{% assign taglist = collections[ tag ] | reverse %}
{% for post in taglist | reverse %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ol>