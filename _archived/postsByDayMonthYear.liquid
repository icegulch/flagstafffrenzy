---
pagination:
  data: postsByDayMonthYear
  size: 1
  alias: group
permalink: /posts/{{ group.year }}/{{ group.month }}/{{ group.day }}/index.html
layout: layouts/base.liquid
eleventyComputed:
  title: "Posts from {{ group.month | monthName }} {{ group.day }}, {{ group.year }}"
---

<h1>Posts from {{ group.month | monthName }} {{ group.day }}, {{ group.year }}</h1>

{% assign postsSortedByDay = group.posts | sort: "publish_date" | reverse %}
{% for post in postsSortedByDay %}
  <div class="archive-months">
    <span>{{ post.publish_date | date: "%H:%M" }} â€¢ {{ post.author }}</span>
    <span>
      <a href="/posts/{{ post.year }}/{{ post.month }}/{{ post.day }}/{{ post.title | slugify }}/">{{ post.title }}</a>
    </span>
  </div>
{% endfor %}